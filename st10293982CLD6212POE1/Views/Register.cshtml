@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div>
        <label>Email</label>
        @Html.TextBox("email")
    </div>
    <div>
        <label>Password</label>
        @Html.Password("password")
    </div>
    <div>
        <label>Full Name</label>
        @Html.TextBox("fullName")
    </div>
    <button type="submit">Register</button>
}
